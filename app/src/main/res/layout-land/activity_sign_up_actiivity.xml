<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="@android:color/white"
    android:orientation="vertical"
    android:background="#1a1a1a"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/landmainicon"/>

</LinearLayout>

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >


           <ScrollView
    android:layout_width="match_parent"
    android:layout_height="200dp"
               android:layout_marginBottom="50dp"
               android:id="@+id/scrollfield"
   >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"

               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="SIGN UP"
                   android:layout_gravity="right"
                   android:textColor="@color/white"
                   android:textSize="28sp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="16dp"
                   android:layout_marginTop="20dp"/>

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="UserName"
                   android:id="@+id/username"
                   android:singleLine="true"
                   android:textColorHint="@color/white"
                   android:paddingLeft="@dimen/fab_margin"

                   android:background="@drawable/rectangular_border"/>




               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:singleLine="true"
                   android:layout_marginTop="@dimen/fab_margin"
                   android:textColorHint="@color/white"
                   android:paddingLeft="@dimen/fab_margin"
                   android:hint="Password"
                   android:id="@+id/signuppassword"
                   android:background="@drawable/rectangular_border"/>

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:singleLine="true"
                   android:layout_marginTop="@dimen/fab_margin"
                   android:textColorHint="@color/white"
                   android:paddingLeft="@dimen/fab_margin"
                   android:hint="Email"
                   android:id="@+id/signupemail"
                   android:background="@drawable/rectangular_border"/>

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:singleLine="true"
                   android:layout_marginTop="@dimen/fab_margin"
                   android:textColorHint="@color/white"
                   android:paddingLeft="@dimen/fab_margin"
                   android:hint="DisplayName"
                   android:layout_marginBottom="80dp"
                   android:id="@+id/displayname"
                   android:background="@drawable/rectangular_border"/>




           </LinearLayout>
</ScrollView>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/scrollfield"
               android:layout_gravity="center_horizontal|bottom"
               android:orientation="vertical"

               android:layout_marginBottom="@dimen/fab_margin">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:layout_marginTop="@dimen/fab_margin"
                   android:textColorHint="@color/white"
                   android:paddingLeft="@dimen/fab_margin"
                   android:text="SUBMIT"
                   android:id= "@+id/signupsubmit"
                   android:textColor="@color/white"
                   android:background="@drawable/rectangular_border_pink"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="20dp"
                   android:id= "@+id/reg_signIn"
                   android:layout_gravity="right"
                   android:text="Already have an account? SIGN IN"
                   android:layout_marginTop="@dimen/fab_margin"
                   android:textSize="@dimen/fab_margin"
                   android:textColor="@color/white"/>


           </LinearLayout>











       </FrameLayout>











    </LinearLayout>











</RelativeLayout>
