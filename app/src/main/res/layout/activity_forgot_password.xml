<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="@android:color/white"
    android:orientation="vertical"
    android:background="#1a1a1a"

    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:id = "@+id/mainicon"
        android:background="@drawable/circle"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginRight="@dimen/left_margin"
        android:layout_marginLeft="@dimen/right_margin">
        <ImageView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/top_margin2"
            android:layout_gravity="center"
            android:src="@drawable/ebokelarge"
            />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glömt ditt lösenord / "
        android:id="@+id/signintextTwo"
        android:layout_below="@+id/mainicon"
        android:textColor="@color/white"
        android:gravity="center"

        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:id="@+id/signintext"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/signintextTwo"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="24sp"
        android:maxLines="2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_centerVertical="true"

        android:layout_margin="@dimen/fab_margin"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Användarnamn / UserName"
            android:id="@+id/forgotemail"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:paddingLeft="@dimen/fab_margin"
            android:background="@drawable/rectangular_border"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/fab_margin"
            android:textColorHint="@color/white"
            android:paddingLeft="@dimen/fab_margin"
            android:text="Lämna / Submit"
            android:textAllCaps="false"
            android:id= "@+id/submit"
            android:textColor="@color/white"
            android:background="@drawable/rectangular_border_pink"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fab_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id= "@+id/signUpBtn"
            android:text="Har du inte ett konto? / Don't have an account?"
            android:layout_marginTop="@dimen/fab_margin"
            android:textSize="@dimen/fab_margin"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id= "@+id/signUp"
            android:text="Bli Medlem / Sign Up"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:textSize="@dimen/fab_margin"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id= "@+id/logInBtn"
            android:text="Har du redan ett konto? / Already have an account?"
            android:layout_marginTop="@dimen/fab_margin"
            android:textSize="@dimen/fab_margin"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id= "@+id/logIn"
            android:text="Logga in / Sign In"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:textSize="@dimen/fab_margin"
            android:textColor="@color/white"/>



    </LinearLayout>
</RelativeLayout>
